<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<project name="books">

	<property file="build.properties" />

	<fail unless="contao.dir" message="Das Conta-Verzeichnis muss angegeben werden: contao.dir" />

	<property name="deploy.dir" location="${contao.dir}/system/modules/${ant.project.name}" />

	<target name="dist">
		<echo>Hier fehlt noch die Implementierung, um das ZIP f√ºr das Contao Extension Repository zusammenzustellen.</echo>
	</target>

	<target name="deploy">
		<copy todir="${deploy.dir}">
			<fileset dir=".">
				<exclude name=".git" />
				<exclude name=".gitignore" />
				<exclude name="build.*" />
				<exclude name="sql/" />
			</fileset>
		</copy>
	</target>

	<target name="clean">
		<delete dir="${deploy.dir}" />
	</target>

</project>
